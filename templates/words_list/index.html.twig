{% extends 'base.html.twig' %}

{% block title %}Words from {{ list.name }}{% endblock %}

{% block body %}
    <div class="row mt-3">
        <div class="col">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">English</th>
                    <th scope="col">Russian</th>
                </tr>
                </thead>
                <tbody>
                {% set num = 1 %}
                {% for word in words %}
                    <tr>
                        <th scope="row">{{ num }}</th>
                        <td>{{ word.english }}</td>
                        <td>{{ word.russian }}</td>
                    </tr>
                    {% set num = num + 1 %}
                {% else %}
                    <p>Список пуст</p>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
