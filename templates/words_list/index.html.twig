{% extends 'base.html.twig' %}

{% block title %}Words from {{ list.name }}{% endblock %}

{% block body %}
    <div class="row mt-3">
        <div class="col-auto">
            <a href="{{ path('app_list_delete', {'id': list.id}) }}" class="btn btn-outline-danger">Удалить весь список</a>
        </div>
        <div class="col-auto">
            <a href="{{ path('app_list_details', {'id': list.id}) }}" class="btn btn-outline-secondary">Информация о списке</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col" class="align-middle text-left">#</th>
                    <th scope="col" class="align-middle text-left"></th>
                    <th scope="col" class="align-middle text-left"></th>
                    <th scope="col" class="align-middle text-left">English</th>
                    <th scope="col" class="align-middle text-left">Russian</th>
                </tr>
                </thead>
                <tbody>
                {% set num = 1 %}
                {% for word in words %}
                    <tr>
                        <th scope="row" class="align-middle text-left">{{ num }}</th>
                        <td class="align-middle text-left"><a href="{{ path('app_word_delete', {'id': word.id}) }}"
                                                              class="badge badge-danger badge-pill">X</a></td>
                        <td class="align-middle text-left"><a href="{{ path('app_word_edit', {'id': word.id}) }}" class="badge badge-success badge-pill ml-2">✎</a>
                        </td>
                        <td class="align-middle text-left">{{ word.english }}</td>
                        <td class="align-middle text-left">{{ word.russian }}</td>
                    </tr>
                    {% set num = num + 1 %}
                {% else %}
                    <p>Список пуст</p>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
