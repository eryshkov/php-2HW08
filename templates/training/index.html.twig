{% extends 'base.html.twig' %}

{% block title %}Hello TrainingController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/carousel.css') }}">
{% endblock %}

{% block body %}
    <div class="row justify-content-center mt-3">
        <div class="col-8">
            <div id="carouselExampleIndicators" class="carousel slide" data-interval="false" data-touch="true"
                 data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for word in words %}
                        <li data-target="#carouselExampleIndicators"
                            data-slide-to="{{ loop.index0 }}"{% if loop.first %} class="active"{% endif %}></li>
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    {% for word in words %}
                        <div class="carousel-item{% if loop.first %} active{% endif %}">
                            <div class="card">
                                <div class="card-header">
                                    Фраза №{{ loop.index }}
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{ word.english }}</h5>
                                    <p class="card-text">{{ word.russian }}</p>
                                    <a href="#" class="btn btn-primary">Help</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
