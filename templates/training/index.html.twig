{% extends 'base.html.twig' %}

{% block title %}Hello TrainingController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/carousel.css') }}">
{% endblock %}

{% block body %}
    <div class="row justify-content-center mt-3">
        <div class="col-auto">
            <div id="carouselExampleIndicators" class="carousel slide" data-interval="false" data-touch="true"
                 data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for word in words %}
                        <li data-target="#carouselExampleIndicators"
                            data-slide-to="{{ loop.index0 }}"{% if loop.first %} class="active"{% endif %}></li>
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    {% for word in words %}
                        <div class="carousel-item{% if loop.first %} active{% endif %}">
                            <div class="card">
                                <div class="card-header">
                                    Фраза №{{ loop.index }} из {{ loop.length }}
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        {% if trainingSettings.isShowTranslation %}
                                            {{ word.russian }}
                                        {% else %}
                                            {{ word.english }}
                                        {% endif %}
                                    </h5>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-info dropdown-toggle"
                                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Правильный ответ
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="#">
                                                {% if trainingSettings.isShowTranslation %}
                                                    {{ word.english }}
                                                {% else %}
                                                    {{ word.russian }}
                                                {% endif %}
                                            </a>
                                        </div>
                                    </div>
                                    {% if loop.last %}
                                        <a class="btn btn-success"
                                           href="{{ path('app_list_details', {'id': list.id}) }}">Вернуться к списку</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
{% endblock %}