{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <div class="row">
        <div class="col text-center">
            <h1>Вход на English Book!</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            {% if authError %}
                <div class="row">
                    <div class="col alert alert-danger" role="alert">
                        {{ authError.message }}
                    </div>
                </div>
            {% endif %}
            {{ form_start(signInForm) }}
            {{ form_row(signInForm.email) }}
            {{ form_row(signInForm.plainPassword) }}
            <div class="checkbox mb-3">
                <label><input type="checkbox" name="_remember_me" checked> Запомнить меня</label>
            </div>
            <button type="submit" class="btn btn-primary">Войти</button>
            {{ form_end(signInForm) }}
        </div>
    </div>
{% endblock %}
