{% extends 'base.html.twig' %}

{% block title %}New Word{% endblock %}

{% block body %}
    <div class="row">
        <div class="col text-center">
            <h1>Создание нового слова</h1>
        </div>
    </div>
    {% if listIsNotExists %}
        <div class="row justify-content-center">
            <div class="col-auto alert alert-danger" role="alert">
                <p class="text-center">Невозможно добавить слово в этот лист</p>
            </div>
        </div>
    {% endif %}
    <div class="row justify-content-center">
        <div class="col-4">
            {{ form_start(wordCreationForm) }}
            {{ form_row(wordCreationForm.english) }}
            {{ form_row(wordCreationForm.russian) }}
            <button type="submit" class="btn btn-primary"{% if listIsNotExists %} disabled{% endif %}>Создать</button>
            {{ form_end(wordCreationForm) }}
        </div>
    </div>
{% endblock %}
